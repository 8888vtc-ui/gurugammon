{
  "name": "gammon-guru-minimal",
  "version": "1.0.0",
  "description": "GammonGuru Backend - Version minimale fonctionnelle",
  "main": "src/server.minimal.ts",
  "scripts": {
    "start": "ts-node src/server.minimal.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/server.minimal.ts",
    "build": "tsc src/server.minimal.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
