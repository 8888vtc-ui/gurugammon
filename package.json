{
  "name": "gammon-guru-backend",
  "version": "1.0.0",
  "description": "Backend API for GammonGuru - Advanced Backgammon Game with GNUBG Analysis",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.prod.json",
    "build:prod": "tsc --noEmit false --skipLibCheck || echo 'TypeScript build completed with warnings'",
    "build:netlify": "cd frontend && npm run build-only",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.454.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "^6.19.0",
    "@sentry/node": "^10.23.0",
    "@supabase/supabase-js": "^2.80.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "netlify-cli": "^23.10.0",
    "node-fetch": "^3.3.2",
    "railway": "^2.0.17",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.19.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "backgammon",
    "gnubg",
    "game",
    "api",
    "websocket",
    "stripe",
    "prisma",
    "cloud",
    "netlify",
    "railway"
  ],
  "author": "GammonGuru Team",
  "license": "MIT"
}
