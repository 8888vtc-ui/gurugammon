{
  "name": "gammon-guru-backend",
  "version": "1.0.0",
  "description": "Backend API for GammonGuru - Advanced Backgammon Game with GNUBG Analysis",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx tsc --project tsconfig.prod.json",
    "postbuild": "node scripts/copy-js.js",
    "build:prod": "npx tsc --noEmit false --skipLibCheck || echo 'TypeScript build completed with warnings'",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:game": "jest tests/game.test.ts",
    "test:api": "node test-api.js",
    "test:comprehensive": "node test-system-comprehensive.js",
    "test:websocket": "node test-websocket-multiplayer.js",
    "test:startup": "node test-server-startup.js",
    "test:health": "curl -s http://localhost:3000/health | jq .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@supabase/supabase-js": "^2.81.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "backgammon",
    "gnubg",
    "game",
    "api",
    "websocket",
    "stripe",
    "prisma",
    "cloud",
    "netlify",
    "railway"
  ],
  "author": "GammonGuru Team",
  "license": "MIT"
}
